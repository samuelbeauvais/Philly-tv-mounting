# Admin Authentication
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_password

# Database (auto-injected by Vercel Postgres)
# Get these from Vercel Dashboard after setting up Postgres
POSTGRES_URL=postgres://username:password@host:port/database
POSTGRES_PRISMA_URL=postgres://username:password@host:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgres://username:password@host:port/database

# Email Service (Resend)
# Sign up at https://resend.com and get your API key
RESEND_API_KEY=re_your_api_key_here

# Email Recipients
ADMIN_EMAIL=admin@example.com
BUSINESS_EMAIL=info@example.com

# Optional: Site URL for email links
NEXT_PUBLIC_SITE_URL=https://your-domain.com
